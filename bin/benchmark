#!/usr/bin/env ruby
require 'gol'
require 'gol/fast_gol'
require 'benchmark'

Benchmark.bm do |x|
  x.report do
    gun_array = Toys.add_arrays(Toys.empty(100, 40), Toys.glider_gun)
    #@gol = World.new(gun_array)
    @gol = Field.new(gun_array)
    100.times do
      system('clear')
      puts @gol.format
      @gol.tick
    end
  end
end
